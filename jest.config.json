{
  "verbose": true,
  "transform": {
    "^.+\\.(js|jsx|mjs|cjs|ts|tsx)$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(three|any-other-modules-that-should-be-transformed)/)"
  ],
  "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "globals": {
    "window": {},
    "ts-jest": {
      "tsconfig": "./tsconfig.json",
      "diagnostics": true
    }
  },
  "setupFiles": ["./src/jest/jest.stubs.js"],
  "testURL": "http://localhost/"
}
